<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="70dp" />
            <gradient
                android:angle="0"
                android:centerY="0.75"
                android:centerColor="@color/primary_light"
                android:endColor="@color/primary_light"
                android:startColor="@color/primary_light" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="70dp" />
                <gradient
                    android:angle="0"
                    android:endColor="@color/green_gradual_end_color"
                    android:startColor="@color/green_gradual_start_color" />
            </shape>
        </clip>
    </item>

</layer-list>